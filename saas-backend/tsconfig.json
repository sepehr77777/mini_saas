{
  "compilerOptions": {
    "target": "ES2020",             // نسخه خروجی جاوااسکریپت
    "module": "CommonJS",           // برای Node.js
    "rootDir": "src",               // مسیر سورس فایل‌ها
    "outDir": "dist",               // مسیر کامپایل شده
    "strict": true,                 // فعال کردن تمام چک‌های TypeScript
    "esModuleInterop": true,        // اجازه می‌دهد import { Pool } from "pg" درست کار کنه
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,           // برای نادیده گرفتن چک تایپ پکیج‌ها
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],          // شامل تمام فایل‌های TS در src
  "exclude": ["src/node_modules", "dist"]
}
